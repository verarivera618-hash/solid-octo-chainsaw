# Alpaca Trading API Credentials
# Get your API keys from: https://alpaca.markets/

# Your Alpaca API Key ID
ALPACA_API_KEY=your_api_key_here

# Your Alpaca API Secret Key
ALPACA_API_SECRET=your_api_secret_here

# Trading Mode: Set to 'false' for LIVE trading, 'true' for paper trading (RECOMMENDED: start with paper trading)
ALPACA_PAPER_TRADING=true

# Optional: Custom base URL (leave empty for default)
# Paper: https://paper-api.alpaca.markets
# Live: https://api.alpaca.markets
ALPACA_BASE_URL=

# Database Configuration
DATABASE_URL=sqlite:./data/backtest.db

# Logging Configuration
LOG_LEVEL=info
