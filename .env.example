# Database Configuration
DATABASE_URL=sqlite:./data/backtest.db

# Data Provider Configuration
DATA_PROVIDER=alpaca

# Alpaca Markets API Configuration
# Get your API keys from: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here

# Alpaca API URLs
# For paper trading (recommended for testing):
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# For live trading (use with caution):
# ALPACA_BASE_URL=https://api.alpaca.markets
# ALPACA_DATA_URL=https://data.alpaca.markets

# Trading Configuration
ALPACA_PAPER_TRADING=true
TRADING_ENABLED=false
MAX_POSITION_SIZE=10000
RISK_LIMIT=0.02

# Logging Configuration
LOG_LEVEL=info