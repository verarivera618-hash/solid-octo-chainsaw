{
  "name": "alpaca-trading-bot",
  "description": "Perplexity-powered Alpaca trading bot with Cursor integration",
  "version": "1.0.0",
  "dockerfile": "Dockerfile",
  "setup_script": "setup.sh",
  "install_commands": [
    "pip install --upgrade pip",
    "pip install -r requirements.txt"
  ],
  "terminal_commands": [
    "python main.py --mode generate --symbols AAPL MSFT --strategy momentum",
    "python main.py --mode trade --symbols AAPL MSFT GOOGL --interval 5",
    "pytest tests/ -v"
  ],
  "environment_variables": {
    "PYTHONPATH": "/workspace/alpaca-trading-bot",
    "LOG_LEVEL": "INFO"
  },
  "test_command": "pytest tests/ -v --cov=src",
  "lint_command": "flake8 src/ --max-line-length=120",
  "format_command": "black src/ tests/ --line-length=120",
  "python_version": "3.11",
  "required_secrets": [
    "PERPLEXITY_API_KEY",
    "ALPACA_API_KEY", 
    "ALPACA_SECRET_KEY"
  ],
  "features": {
    "real_time_streaming": true,
    "paper_trading": true,
    "backtesting": false,
    "multiple_strategies": true,
    "risk_management": true,
    "sentiment_analysis": true
  },
  "dependencies": {
    "perplexity": "Latest API",
    "alpaca": "alpaca-py>=0.13.0",
    "data_processing": "pandas, numpy",
    "async": "asyncio, aiohttp"
  }
}